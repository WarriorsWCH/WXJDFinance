.content {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  background: #f5f5f5;
}

.content li {
  width: 100%;
  text-align: center;
  color: #999;
  font-size: 12px;
  padding: 12px 0;
  height: 19px;
  line-height: 19px;
  border-top: 1px solid #ddd;
}

.content li:nth-child(1) {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: 93px;
  box-sizing: border-box;
  padding-top: 10px;
  padding-bottom: 5px;
}

.content li:nth-child(1)>div {
  width: 33.3333%;
  text-align: center;
  box-sizing: border-box;
}

.content li:nth-child(1)>div image {
  width: 45px;
  height: 45px;
}

.content li:nth-child(1)>div p {
  font-size: 13px;
  text-align: center;
  display: block;
  color: #999;
  margin-top: 6px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
